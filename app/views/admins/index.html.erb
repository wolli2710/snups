<%= render 'layouts/admin_menue' %>

<h2>Admins</h2>

<br />

<% @users.each do |user| %>
<p><%= link_to "remove", :controller => "admins", :action => :degrade, :user_id => user.id %> <%= user.name %> </p>
<% end %>

<br />
<p>Add new Admin</p>
<% form_tag(:controller => "admins", :action => "upgrade", :method => :post) do %>
	<%= label_tag "Name" %>
	<%= text_field_tag :name %>
	<%= submit_tag "Add Admin" %>
<% end %>